<svg width="64" height="64" viewBox="0 0 64 64" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="wechatGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1aad19;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#00d100;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background circle -->
  <circle cx="32" cy="32" r="32" fill="url(#wechatGradient)"/>
  
  <!-- WeChat icon -->
  <g fill="white">
    <!-- Main chat bubble -->
    <ellipse cx="24" cy="26" rx="14" ry="10"/>
    
    <!-- Secondary chat bubble -->
    <ellipse cx="40" cy="36" rx="12" ry="8"/>
    
    <!-- Eyes on main bubble -->
    <circle cx="20" cy="24" r="2" fill="#1aad19"/>
    <circle cx="28" cy="24" r="2" fill="#1aad19"/>
    
    <!-- Eyes on secondary bubble -->
    <circle cx="37" cy="34" r="1.5" fill="#1aad19"/>
    <circle cx="43" cy="34" r="1.5" fill="#1aad19"/>
  </g>
  
  <!-- Chat indicator dots -->
  <g fill="white" opacity="0.8">
    <circle cx="16" cy="48" r="2">
      <animate attributeName="opacity" values="0.3;1;0.3" dur="1.5s" repeatCount="indefinite"/>
    </circle>
    <circle cx="24" cy="48" r="2">
      <animate attributeName="opacity" values="0.3;1;0.3" dur="1.5s" begin="0.3s" repeatCount="indefinite"/>
    </circle>
    <circle cx="32" cy="48" r="2">
      <animate attributeName="opacity" values="0.3;1;0.3" dur="1.5s" begin="0.6s" repeatCount="indefinite"/>
    </circle>
  </g>
</svg>