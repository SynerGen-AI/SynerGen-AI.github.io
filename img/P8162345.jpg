<svg width="1920" height="1080" viewBox="0 0 1920 1080" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#667eea;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#764ba2;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#f093fb;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="centerGlow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:rgba(255,255,255,0.3);stop-opacity:1" />
      <stop offset="100%" style="stop-color:rgba(255,255,255,0);stop-opacity:0" />
    </radialGradient>
    <filter id="blur">
      <feGaussianBlur stdDeviation="3"/>
    </filter>
  </defs>
  
  <!-- Background gradient -->
  <rect width="1920" height="1080" fill="url(#bgGradient)"/>
  
  <!-- Center glow -->
  <ellipse cx="960" cy="540" rx="800" ry="400" fill="url(#centerGlow)"/>
  
  <!-- Abstract geometric shapes -->
  <g opacity="0.4">
    <!-- Large circles -->
    <circle cx="300" cy="200" r="150" fill="rgba(255,255,255,0.1)" filter="url(#blur)">
      <animate attributeName="cy" values="200;250;200" dur="8s" repeatCount="indefinite"/>
    </circle>
    <circle cx="1600" cy="800" r="200" fill="rgba(255,255,255,0.08)" filter="url(#blur)">
      <animate attributeName="cx" values="1600;1550;1600" dur="10s" repeatCount="indefinite"/>
    </circle>
    
    <!-- Floating rectangles -->
    <rect x="100" y="600" width="80" height="80" fill="rgba(255,255,255,0.15)" rx="10" transform="rotate(45 140 640)">
      <animateTransform attributeName="transform" type="rotate" values="45 140 640;90 140 640;45 140 640" dur="12s" repeatCount="indefinite"/>
    </rect>
    <rect x="1700" y="300" width="60" height="60" fill="rgba(255,255,255,0.12)" rx="8" transform="rotate(30 1730 330)">
      <animateTransform attributeName="transform" type="rotate" values="30 1730 330;75 1730 330;30 1730 330" dur="15s" repeatCount="indefinite"/>
    </rect>
    
    <!-- Triangular shapes -->
    <polygon points="800,100 850,200 750,200" fill="rgba(255,255,255,0.1)">
      <animate attributeName="opacity" values="0.1;0.3;0.1" dur="6s" repeatCount="indefinite"/>
    </polygon>
    <polygon points="1200,900 1280,980 1120,980" fill="rgba(255,255,255,0.08)">
      <animate attributeName="opacity" values="0.08;0.25;0.08" dur="9s" repeatCount="indefinite"/>
    </polygon>
  </g>
  
  <!-- Tech-inspired grid pattern -->
  <g opacity="0.1" stroke="rgba(255,255,255,0.3)" stroke-width="1" fill="none">
    <defs>
      <pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse">
        <path d="M 100 0 L 0 0 0 100" fill="none" stroke="rgba(255,255,255,0.2)" stroke-width="1"/>
      </pattern>
    </defs>
    <rect width="1920" height="1080" fill="url(#grid)"/>
  </g>
  
  <!-- Floating particles -->
  <g opacity="0.6">
    <circle cx="400" cy="300" r="3" fill="rgba(255,255,255,0.8)">
      <animate attributeName="cy" values="300;280;300" dur="4s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.8;0.3;0.8" dur="4s" repeatCount="indefinite"/>
    </circle>
    <circle cx="1200" cy="700" r="2" fill="rgba(255,255,255,0.7)">
      <animate attributeName="cx" values="1200;1220;1200" dur="5s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.7;0.2;0.7" dur="5s" repeatCount="indefinite"/>
    </circle>
    <circle cx="600" cy="500" r="4" fill="rgba(255,255,255,0.6)">
      <animate attributeName="cy" values="500;520;500" dur="6s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.6;0.1;0.6" dur="6s" repeatCount="indefinite"/>
    </circle>
    <circle cx="1500" cy="400" r="2.5" fill="rgba(255,255,255,0.5)">
      <animate attributeName="cx" values="1500;1480;1500" dur="7s" repeatCount="indefinite"/>
      <animate attributeName="opacity" values="0.5;0.1;0.5" dur="7s" repeatCount="indefinite"/>
    </circle>
  </g>
  
  <!-- Central focus area with subtle highlight -->
  <ellipse cx="960" cy="540" rx="400" ry="200" fill="none" stroke="rgba(255,255,255,0.2)" stroke-width="2" opacity="0.5">
    <animate attributeName="stroke-opacity" values="0.2;0.5;0.2" dur="8s" repeatCount="indefinite"/>
  </ellipse>
  
  <!-- Subtle text overlay -->
  <g opacity="0.1" fill="rgba(255,255,255,0.3)" font-family="Arial, sans-serif">
    <text x="960" y="540" text-anchor="middle" font-size="48" font-weight="300">SynerGen-AI</text>
    <text x="960" y="580" text-anchor="middle" font-size="18" font-weight="200">Advancing AI Research</text>
  </g>
</svg>